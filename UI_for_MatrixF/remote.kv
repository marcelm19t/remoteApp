<Label>
    color: 0,0,0,1

<BackgroundColor@Widget>
    background_color: 1, 1, 1, 1
    canvas.before:
        Color:
            rgba: root.background_color
        RoundedRectangle:
            size: self.size
            pos: self.pos
            radius: (5,)

<NormalButton@Button>
    background_normal: ''
    background_color: 0.6,0.6,0.6,1
    size_hint: 0.08, 0.05

<LargerButton@NormalButton>
    size_hint: 0.12, 0.05

<EditButton@NormalButton>
    size_hint: 0.04, 0.05
    font_size: self.height

<NormalLabel@BackgroundColor+Label>
    text_size: self.size
    valign: 'middle'
    padding: (5,5)
    size_hint: 0.12, 0.05
    background_color: 1,0.6,0.6,1

<SquareLabel@NormalLabel>
    size_hint: 0.1, 0.1
    valign: 'top'

<MainWidget>

    canvas.before:
        Color:
            rgba: 0.1,0.1,0.3,1
        Rectangle:
            size: self.size
            pos: self.pos

    # ----------------- First row ----------------

    NormalButton:
        id: n1
        on_press: root.button_pressed(self)
        text: 'Mode 1'
        pos_hint: {'top': 0.96, 'x': 0.02}

    NormalButton:
        id: n2
